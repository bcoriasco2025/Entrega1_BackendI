<h1 class="text-center mb-4">Productos en Tiempo Real</h1>

<div class="row" id="realTimeList">
  {{#each products}}
    <div class="col-md-4 mb-3">
      <div class="card h-100">
        <img src="{{thumbnails.[0]}}" class="card-img-top">
        <div class="card-body text-center">
          <h5>{{title}}</h5>
          <p>{{description}}</p>
          <p><strong>$ {{price}}</strong></p>
          <button 
            type="button"
            class="btn btn-danger btn-sm"
            onclick="deleteProduct('{{_id}}')">
            Eliminar
          </button>
        </div>
      </div>
    </div>
  {{/each}}
</div>

<h3 class="mt-5 text-center">Agregar Producto</h3>

<form id="productForm" class="mx-auto" style="max-width: 500px;">
  <input class="form-control mb-2" id="title" placeholder="Título" required>
  <input class="form-control mb-2" id="description" placeholder="Descripción" required>
  <input class="form-control mb-2" id="code" placeholder="Código" required>
  <input class="form-control mb-2" id="category" placeholder="Categoría" required>
  <input class="form-control mb-2" id="price" type="number" placeholder="Precio" required>
  <input class="form-control mb-2" id="stock" type="number" placeholder="Stock" required>
  <input class="form-control mb-3" id="thumbnail" placeholder="URL imagen">
  <button class="btn btn-primary w-100">Agregar</button>
</form>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/realtime.js"></script>
